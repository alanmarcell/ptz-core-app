{
  "name": "ptz-core-app",
  "version": "1.0.4",
  "description": "This is the core App for polutz App modules.",
  "main": "dist/index.js",
  "typings": "src/index.ts",
  "scripts": {
    "lint": "tslint ./src/**/*.ts ./src/**/*.test.ts ./src/**/*.d.ts",
    "js": "rimraf dist && tsc && babel dist -d dist --presets es2015",
    "pretest": "npm-run-all --parallel js lint",
    "mocha": "mocha ./dist/**/*.js",
    "test": "nyc npm run mocha && nyc report --reporter=text-lcov > coverage.lcov && codecov --token=ef5af970-5e20-4047-8fdb-76960aeb8a0b",
    "predebug": "npm run pretest",
    "debug": "node --nolazy --debug-brk=5858 dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polutz/ptz-core-app.git"
  },
  "author": "angeloocana.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/polutz/ptz-core-app/issues"
  },
  "homepage": "https://github.com/polutz/ptz-core-app#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "ptz-assert": "^1.6.3",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12"
  },
  "dependencies": {
    "ptz-core-domain": "^1.2.0"
  }
}
