  "bugs": {
    "url": "https://github.com/polutz/ptz-core-app/issues"
  },
  "homepage": "https://github.com/polutz/ptz-core-app#readme",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "codecov": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "ptz-assert": "^1.6.2",
    "sinon": "^2.1.0",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2",
    "typings": "^2.1.0"
  },
  "dependencies": {
    "ptz-core-domain": "^1.1.7"
  }
